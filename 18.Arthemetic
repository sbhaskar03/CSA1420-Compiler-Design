%{
#include <stdio.h>
int a,b;
%}

%%

[0-9]+[+\-*/][0-9]+ {
    sscanf(yytext,"%d%1c%d",&a,&yytext[0],&b);
    switch(yytext[0]){
        case '+': printf("%d+%d=%d\n",a,b,a+b); break;
        case '-': printf("%d-%d=%d\n",a,b,a-b); break;
        case '*': printf("%d*%d=%d\n",a,b,a*b); break;
        case '/': b?printf("%d/%d=%d\n",a,b,a/b):printf("Error: div by 0\n"); break;
    }
}

.|\n ;   /* ignore others */

%%

int yywrap(){return 1;}
int main(){yylex();}
